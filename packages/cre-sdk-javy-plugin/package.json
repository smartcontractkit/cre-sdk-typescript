{
	"name": "@chainlink/cre-sdk-javy-plugin",
	"version": "1.0.9",
	"type": "module",
	"bin": {
		"cre-setup": "bin/setup.ts",
		"cre-compile-workflow": "bin/compile-workflow.ts"
	},
	"scripts": {
		"build": "bun run clean && bun scripts/compile-javy-sdk-plugin.ts",
		"clean": "rm -rf dist",
		"check": "biome check --write ${BIOME_PATHS:-.}",
		"format": "biome format --write ${BIOME_PATHS:-.}",
		"full-checks": "&& bun typecheck && bun check",
		"lint": "biome lint --write",
		"typecheck": "tsc",
		"prepublishOnly": "bun typecheck && bun check"
	},
	"keywords": [],
	"author": "SmartContract Chainlink Limited SEZC",
	"license": "BUSL-1.1",
	"description": "Chainlink CRE SDK Javy Plugin.",
	"repository": {
		"type": "git",
		"url": "https://github.com/smartcontractkit/cre-sdk-typescript",
		"directory": "packages/cre-sdk-javy-plugin"
	},
	"files": [
		"bin/",
		"scripts/",
		"dist/"
	],
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"bun": ">=1.2.21"
	}
}
